<Window x:Class="cours4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cours4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="30">
    <StackPanel>
        <ComboBox x:Name="ComboBoxGroups">
        </ComboBox>
        
        <CheckBox x:Name="CheckBoxPogo" Checked="CheckBox_Checked">Pogo</CheckBox>
        <ToggleButton>Pogo</ToggleButton>
        <RadioButton GroupName="Drink" x:Name="RadioButtonCoke" Checked="RadioButtonDrink_Checked">Pogo</RadioButton>
        <RadioButton GroupName="Drink" x:Name="RadioButton7up" Checked="RadioButtonDrink_Checked">Pogo</RadioButton>
        <RadioButton GroupName="Drink" x:Name="RadioButtonCanadaDry" Checked="RadioButtonDrink_Checked">Pogo</RadioButton>
    </StackPanel>
</Window>
